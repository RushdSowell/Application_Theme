<style-scheme id="Solarized" _name="Solarized" version="1.0">
  <author>Rushd Sowell</author>
  <_description>Attempt at Solarized color scheme</_description>

  <color name="brblack"                         value="#002b36"/>
  <color name="black"                         	value="#073642"/>
  <color name="brgreen"                         value="#586e75"/>
  <color name="bryellow"                        value="#657b83"/>  
  <color name="brblue"                          value="#839496"/>  
  <color name="brcyan"                          value="#93a1a1"/>  
  <color name="white"                         	value="#eee8d5"/>  
  <color name="brwhite"                         value="#fdf6e3"/>  
  <color name="yellow"                         	value="#b58900"/>  
  <color name="brred"                         	value="#cb4b16"/>  
  <color name="red"                         	value="#dc322f"/>  
  <color name="magenta"                         value="#d33682"/>  
  <color name="brmagenta"                       value="#6c71c4"/>  
  <color name="blue"                         	value="#268bd2"/>  
  <color name="cyan"                         	value="#2aa198"/>
  <color name="green"                         	value="#859900"/>  
  
  
  <!-- Global Settings -->
  <style name="current-line"                foreground="brgreen" background="white"/>
  <style name="line-numbers"                foreground="cyan" background="white"/>
  <style name="current-line-number"         foreground="blue" background="white"/>
  <style name="draw-spaces"                 foreground="bryellow"/>
  <style name="background-pattern"          background="white"/>
  <style name="text"                        foreground="brgreen" background="brwhite"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="brwhite" background="brcyan" bold="true"/>
  <style name="bracket-mismatch"            foreground="white" background="red"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="brgreen" background="brgreen"/>

  <!-- Search Matching -->
  <style name="search-match"                background="yellow"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="brcyan"/>
  <style name="def:shebang"                 foreground="brblue" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="brmagenta"/>
  <style name="def:special-char"            foreground="magenta"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="blue"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="red" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="green" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="brblue"/>
  <style name="def:error"                   background="red" bold="true"/>
  <style name="def:warning"                 background="yellow"/>
  <style name="def:note"                    background="yellow" bold="true"/>
  <style name="def:underlined"              italic="true" underline="single"/>

  <!-- Language specific -->
  <style name="latex:command"               foreground="blue" bold="true"/>

  <style name="latex:usepackage"            foreground="blue" bold="true"/>
  <style name="latex:pkg-name"              use-style="text"/>
  <style name="latex:special-char"          foreground="magenta"/>

  <style name="latex:display-math"          foreground="cyan"/>
  <style name="latex:math-boundary"         foreground="cyan" bold="true"/>
  <style name="latex:math-super-sub-script" foreground="cyan" bold="true"/>
  <style name="latex:math-command"          foreground="cyan" bold="true"/>
  <style name="latex:math-special-char"     foreground="cyan"/>

  <style name="latex:begin-end-command"     foreground="brmagenta" bold="true"/>
  <style name="latex:env-name"              foreground="magenta" bold="false"/>

  <style name="latex:include"               foreground="blue" bold="true"/>
  <style name="latex:included-file"         foreground="brred" bold="false"/>
  <style name="latex:section-command"       foreground="blue" bold="true"/>
  <style name="latex:section"               foreground="yellow" bold="false"/>

  <style name="latex:verbatim"              foreground="green" bold="false"/>

</style-scheme>
